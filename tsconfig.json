{
  "compilerOptions": {
    "rootDir": ".",
    "incremental": true,
    "target": "es2020",
    "module": "ESNext",
    "lib": ["esnext", "dom", "es2020"],
    "types": [],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": true,
    "composite": true,
    "moduleResolution": "bundler",
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
