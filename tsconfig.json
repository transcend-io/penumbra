{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "amd",
    "lib": ["esnext", "dom", "es2015", "es2016", "es2017", "dom"],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "baseUrl": ".",
    "outFile": "build/index.js",
    "types": ["node"],
    "composite": true,
    "moduleResolution": "node",
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
