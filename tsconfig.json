{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "module": "commonjs",
    "lib": ["esnext", "dom", "es2015", "es2016", "es2017"],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "build",
    "types": ["node"],
    "composite": true,
    "moduleResolution": "node",
    "strict": true
  },
  "include": ["src/**/*", "!src/tests"],
  "exclude": ["node_modules", "build"]
}
