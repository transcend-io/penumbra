{
  "name": "@transcend-io/penumbra",
  "version": "7.0.0",
  "description": "Crypto streams for the browser.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    },
    "./worker": {
      "types": "./dist/worker.d.ts",
      "import": "./dist/worker.js",
      "require": "./dist/worker.cjs"
    }
  },
  "directories": {
    "example": "example"
  },
  "scripts": {
    "build": "vite build",
    "test": "web-test-runner --node-resolve --playwright --browsers chromium firefox webkit --files tests/**/*.test.ts",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:prettier": "prettier --check . --log-level warn",
    "lint:eslint": "eslint .",
    "lint:types": "tsc --noEmit",
    "format": "prettier --write .",
    "rebuild-fixtures": "tsx fixtures/rebuild-fixtures.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/transcend-io/penumbra.git"
  },
  "keywords": [
    "browser",
    "crypto",
    "worker",
    "encryption",
    "decryption",
    "stream",
    "client"
  ],
  "author": "Transcend Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/transcend-io/penumbra/issues"
  },
  "files": [
    "dist",
    "src"
  ],
  "homepage": "https://github.com/transcend-io/penumbra#readme",
  "dependencies": {
    "@transcend-io/conflux": "5.0.0-alpha.0",
    "@transcend-io/encrypt-web-streams": "1.0.3",
    "comlink": "^4.4.1",
    "mime": "^4.0.7",
    "remote-web-streams": "^0.2.0",
    "streamsaver": "^2.0.6"
  },
  "devDependencies": {
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "depcheck": "^1.4.7",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "prettier": "^3.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.2",
    "unplugin-dts": "1.0.0-beta.4",
    "vite": "^7.0.6"
  },
  "packageManager": "pnpm@10.13.1+sha256.0f9ed48d808996ae007835fb5c4641cf9a300def2eddc9e957d9bbe4768c5f28"
