{
  "name": "browser-decryption-stream",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "start": "nodemon --exec 'http-server build -a localhost'",
    "start-ssl": "nodemon --exec 'http-server build --cert ssl/certificate.pem --key ssl/private.key --ssl'",
    "clean": "rimraf build",
    "build-dev": "npm run clean && mkdir -p build && cp index.html build/index.html && cp style.css build/style.css && webpack --watch",
    "build-prod": "npm run clean && mkdir -p build && cp index.html build/index.html && cp style.css build/style.css && webpack -p --mode production"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.4",
    "comlink": "^4.0.1",
    "crypto-browserify": "3.12.0",
    "file-saver": "2.0.1",
    "jszip": "^3.2.1",
    "nodemon": "^1.19.1",
    "render-media": "3.1.3",
    "streamsaver": "1.2.0",
    "typedarray-to-buffer": "3.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.2",
    "babel-loader": "^8.0.5",
    "http-server": "^0.11.1",
    "rimraf": "^2.6.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "worker-plugin": "^3.1.0"
  },
  "keywords": []
}
