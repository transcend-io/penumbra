{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",

    "composite": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "incremental": true,

    "target": "es2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom", "es2020"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/@types"],

    "allowJs": true,
    "checkJs": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["dist", "coverage", "node_modules", "build"]
}
